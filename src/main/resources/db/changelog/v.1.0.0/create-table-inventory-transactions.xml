<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-inventory-transactions" author="korol">
        <createTable tableName="inventory_transactions">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="transaction_type" type="varchar(50)"/>

            <column name="quantity_change" type="integer"/>

            <column name="reason" type="varchar(256)"/>

            <column name="clinic_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_inventory_transactions_clinic"
                             references="clinics(id)"/>
            </column>

            <column name="user_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_inventory_transactions_user"
                             references="users(id)"/>
            </column>

            <column name="product_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_inventory_transactions_product"
                             references="products(id)"/>
            </column>

            <column name="batch_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_inventory_transactions_batch"
                             references="batches(id)"/>
            </column>

            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>